{
  "name": "msearch",
  "productName": "mSearch",
  "version": "1.0.0",
  "description": "Mon navigateur Electron mSearch",
  "author": "Mathias <mathias@example.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^26.0.19"
  },
  "build": {
    "appId": "com.mservices.msearch",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    }
  }
}
